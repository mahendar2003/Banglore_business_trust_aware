{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [
    "src/components/ui/**/*",
    "node_modules"
  ]
}
